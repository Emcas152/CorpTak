@model CorpTak.Models.VievModel.ColaboradorViewModel
@{
    ViewBag.Title = "Editar";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Editar", "Colaborador", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-12">
            @Html.HiddenFor(d=>d.Id)
            @Html.LabelFor(d => d.Nombres)
            @Html.TextBoxFor(d => d.Nombres, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.Nombres, null, new { @class = "red" })
            @Html.LabelFor(d => d.Apellidos)
            @Html.TextBoxFor(d => d.Apellidos, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.Apellidos, null, new { @class = "red" })
            @Html.LabelFor(d => d.EstadoCivil)
            @Html.TextBoxFor(d => d.EstadoCivil, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.EstadoCivil, null, new { @class = "red" })
            @Html.LabelFor(d => d.GradoAcademico)
            @Html.TextBoxFor(d => d.GradoAcademico, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.GradoAcademico, null, new { @class = "red" })
            @Html.LabelFor(d => d.Direccion)
            @Html.TextBoxFor(d => d.Direccion, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.Direccion, null, new { @class = "red" })<br />
            @Html.LabelFor(d => d.FechaNacimiento)<br />
            @Html.EditorFor(d => d.FechaNacimiento, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.FechaNacimiento, null, new { @class = "red" })

            <div style="text-align:right">
                <input type="submit" class="btn btn-success" value="Guardar" />
            </div>
        </div>
    </div>

}
